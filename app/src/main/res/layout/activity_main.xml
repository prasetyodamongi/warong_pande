<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/hiasanatas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hiasan2" />

    <ImageView
        android:id="@+id/garis3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/sapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Warong Pande"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sapa"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Nama Pemesan"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/nama_pemesan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/title_nama"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background1"
        android:hint="Henry Hendrawan"
        android:paddingStart="20dp"
        android:textSize="20sp"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/background_prodak"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_below="@+id/nama_pemesan"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background1" />

    <TextView
        android:id="@+id/title_uang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/background_prodak"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:text="Uang Tunai"
        android:textSize="18sp"
        android:textStyle="italic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_uang"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/uang_tunai"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:background="@drawable/background1"
            android:hint="Rp0"
            android:paddingStart="20dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_hitung"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/button"
            android:text="Hitung"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/title_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/cl1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cl1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Rp0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/title_kembalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembalian"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/title_total"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/kembalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_total"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Rp0"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_pesan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/title_kembalian"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button"
        android:text="Tambah Pesanan" />

</RelativeLayout>